{
  "name": "Hello World!",
  "description": "My first Chrome App.",
  "version": "0.1",
  "manifest_version": 2,
  "permissions": [
    "storage",
    "webview",
    "downloads",
    "clipboardRead",
    "clipboardWrite",
    "audioCapture",
    "videoCapture",
    {"fileSystem":["read","write"]}
  ],
  "app": {
    "background": {
      "scripts": ["backend.js"]
    }
  },
  "file_handlers": {
    "any": {
      "extensions":["pid"]
    }
  },
  "icons": { "128": "icon.png" }
}
