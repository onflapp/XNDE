#!/bin/sh

if [ -z "$1" ];then
  echo "launch [application path]"
  exit 1
else
  P=`realpath "$1"`
  U="http://localhost:3000/dispatch?name=LAUNCHER&command=launch&path=$P"

  if [ "$2" ];then
    if [ -f "$2" ];then
      A=`realpath "$2"`
      U="$U&args=$A"
    else
      U="$U&args=$2"
    fi
  fi
  curl -o - "$U"
fi
